<form method="GET" class="form-horizontal">
    <div class="form-group">

        {% for item in form %}
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                {% if item.type == 'boolean' %}
                    <label class="control-label col-sm-4" for="select-{{ input.name }}">{{ input.label }}</label>
                    <div class="col-sm-8">
                        <select name="{{ input.name }}" id="select-{{ input.name }}" class="form-control">
                            <option value="">Tous</option>
                            <option value="true"
                                    {% if app.request.get(input.name) == "true" %}selected{% endif %}>
                                Actif
                            </option>
                            <option value="false"
                                    {% if app.request.get(input.name) == "false" %}selected{% endif %}>
                                Inactif
                            </option>
                        </select>
                    </div>
                {% elseif item.type == 'select' %}
                    <label class="control-label col-sm-4" for="select-{{ input.name }}">{{ input.label }}</label>
                    <div class="col-sm-8">
                        <select name="{{ item.name }}" id="select-{{ input.name }}" class="form-control">
                            <option value="">{{ input.default }}</option>
                            {% for option in input.options %}
                                <option value="{{ option.value }}"
                                        {% if app.request.get(option.value) == "{{ option.value }}" %}selected{% endif %}>
                                    {{ option.value }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                {% else %}
                    <label class="control-label col-sm-4" for="input-{{ input.name }}">{{ input.label }}</label>
                    <div class="col-sm-8">
                        <input type="{{ input.type }}" name="{{ input.name }}" id="input-{{ input.name }}"
                               class="form-control"
                               value="{{ app.request.get(input.name)|join(', ') }}"/>
                    </div>
                {% endif %}
            </div>
        {% endfor %}

        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <label class="control-label col-sm-4" for="select-{{ input.name }}">{{ input.name }}</label>
            <div class="col-sm-8">
                <select name="{{ item.name }}" id="select-{{ input.name }}" class="form-control">
                    <option value="">{{ input.default }}</option>
                    {% for value in input.values %}
                        <option value="{{ value.name }}"
                                {% if app.request.get(item.name) == "{{ value.name }}" %}selected{% endif %}>
                            {{ value.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 text-right pull-right">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-search"></span> Filtrer ({{ input.count }})
            </button>
            <button id="reset" class="btn btn-warning">
                <span class="glyphicon glyphicon-remove"></span> Effacer
            </button>
        </div>
    </div>
</form>
