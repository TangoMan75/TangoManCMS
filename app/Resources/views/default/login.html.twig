{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Connexion{% endblock %}

{% block body %}
    <div class="container">
        <div id="login-form" class="jumbotron">
            <div class="row">
                <form method="post" action="{{ path('app_check') }}" class="form-horizontal col-md-6 col-md-offset-2">
                    <h2 class="text-center">Connexion</h2>
                    <div class="form-group">
                        <label class="control-label col-sm-4" id="inputUsername">Nom d'utilisateur ou email</label>
                        <div class="col-sm-8">
                            <input type="text" id="inputUsername" name="_username" value="{{ lastUsername }}"
                                   class="form-control" autofocus/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-4" for="inputPassword">Mot de passe</label>
                        <div class="col-sm-8">
                            <input type="password" id="inputPassword" name="_password" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-4">
                            <button class="btn btn-primary">
                                <i class="glyphicon glyphicon-lock"></i> Se connecter
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row">
                <p class="text-center">
                    <small><a href="{{ path('app_security_passwordreset') }}">J'ai oubli√© mon mot de passe.</a></small>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
