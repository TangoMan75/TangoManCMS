{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Cr√©er un compte utilisateur{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}

    {#{% if error %}#}
    {#<div class="alert alert-danger alert-dismissible anim-alert">#}
    {#<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>#}
    {#{{ error.message }}#}
    {#</div>#}
    {#{% endif %}#}
    <div id="login-form" class="jumbotron">
        <div class="row">
            <form method="post" action="{{ path('app_check') }}" class="form-horizontal col-md-6 col-md-offset-2">
                <h2>Connexion</h2>
                <div class="form-group">
                    <label class="control-label col-sm-4" id="inputUsername">Nom d'utilisateur</label>
                    <div class="col-sm-8">
                        <input type="text" id="inputUsername" name="_username" value="{{ last_username }}" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4" for="inputPassword">Mot de passe</label>
                    <div class="col-sm-8">
                        <input type="password" id="inputPassword" name="_password" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-4">
                        <button class="btn btn-default">
                            <i class="glyphicon glyphicon-lock"></i> Se connecter
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
