        <div class="well">
            <h1>{{ post.author }}</h1>
            <h2>{{ post.title }}</h2>
            <p>{{ post.content|nl2br }}</p>
            <p>{{ post.datetime|date('d/m/Y') }}</p>
        </div>
    {% else %}
        <p>Il n'y a aucun message Ã  afficher</p>
    {% endfor %}

