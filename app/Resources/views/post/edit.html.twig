{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Publier un message {% endblock %}

{% block head %}
    {{ parent() }}
    {% if app.user %}
        <script src="http://cdn.tinymce.com/4/tinymce.min.js"></script>
        <script>tinymce.init({ selector:'textarea' });</script>
    {% endif %}
{% endblock %}

{% block body %}

    {% if app.user %}
        {% include "includes/_post-form.html.twig" with {'callback': app.request.uri} %}
    {% else %}
        <div class="jumbotron">
            <div class="text-center">
                <h2>Vous devez être connecté pour pouvoir publier des messsages.</h2>
                <p>
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">Se connecter</a>
                    <a href="{{ path('app_user_register', { 'callback': app.request.uri }) }}" class="btn btn-danger btn-lg">S'inscrire</a>
                </p>
            </div>
        </div>
    {% endif %}

{% endblock %}
