{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Publier un media{% endblock %}

{% block head %}
    {{ parent() }}
    {% if app.user %}
        <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
        <script>tinymce.init({selector: 'textarea', height: '250'});</script>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container">

        {% if app.user %}
            {% include "includes/_media-form.html.twig" with { 'callback': app.request.uri|callback } %}
        {% else %}
            <div class="jumbotron">
                <div class="text-center">
                    <h2>Vous devez être connecté pour pouvoir publier des contenus.</h2>
                    <p>
                        <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">Se connecter</a>
                        <a href="{{ path('app_security_register', { 'callback': app.request.uri|callback }) }}"
                           class="btn btn-danger btn-lg">S'inscrire</a>
                    </p>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
