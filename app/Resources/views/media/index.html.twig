{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ media }}{% endblock %}

{% block body %}
    <div class="container">
        <header class="media-header">
            <h1 class="media-title">{{ media }}</h1>
        </header>
        <section>
            {% for media in listMedia %}
                {% set media = media[0] %}
                {% include "includes/_media.html.twig" with { 'callback': app.request.uri|callback } %}
            {% endfor %}
        </section>
    </div>
{% endblock %}
