{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ media.title }}{% endblock %}

{% block body %}
    <div class="container">
        <header class="media-header">
            <h1 class="media-title">{{ media.title }}</h1>
        </header>
        <section>
            {% for media in mediaList %}
                {% include "includes/_media.html.twig" with { 'media': item, 'callback': app.request.uri } %}
            {% endfor %}
        </section>
    </div>
{% endblock %}
