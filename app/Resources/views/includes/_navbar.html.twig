<div class="container">
    <!-- Header -->
    <header role="banner">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse"
                            data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}">
                        <span class="glyphicon glyphicon-book"></span>
                        {{ site_name }}
                    </a>
                </div>
                <div class="collapse navbar-collapse">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <ul class="nav navbar-nav navbar-left">
                            {% if app.request.get('_route') == 'homepage' %}
                                <li>
                                    <a href="#post-form" class="smooth">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                        Publier
                                    </a>
                                </li>
                            {% elseif app.request.get('_route') == 'post_index' %}
                                <li>
                                    <a href="#post-form">
                                        <span class="glyphicon glyphicon-comment"></span>
                                        Commenter
                                    </a>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{ path('app_post_new', {'callback': app.request.uri|callback }) }}">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                        Publier
                                    </a>
                                </li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a href="{{ path('app_admin_admin_index') }}">
                                        <span class="glyphicon glyphicon-cog"></span>
                                        Administration
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    {% endif %}
                    <ul class="nav navbar-nav navbar-right">
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li>
                                <a href="{{ path('app_user_show', { 'slug':app.user.slug }) }}">
                                    <span class="glyphicon glyphicon-user"></span>
                                    {{ app.user.username|capitalize }}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('app_user_edit', { 'slug':app.user.slug, 'callback': app.request.uri|callback }) }}">
                                    <span class="glyphicon glyphicon-cog"></span>
                                    Paramètres
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('app_logout') }}">
                                    <span class="glyphicon glyphicon-off"></span>
                                    Déconnexion
                                </a>
                            </li>
                        {% else %}
                            <li><a href="{{ path('app_security_register', { 'callback': app.request.uri|callback }) }}">
                                    <span class="glyphicon glyphicon-floppy-disk"></span>
                                    Inscription
                                </a>
                            </li>
                            <li><a href="{{ path('app_login') }}">
                                    <span class="glyphicon glyphicon-lock"></span>
                                    Connexion
                                </a>
                            </li>
                        {% endif %}
                    </ul>

                </div>
            </div>
        </nav>
    </header>
</div>