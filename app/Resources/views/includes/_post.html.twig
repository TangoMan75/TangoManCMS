<article class="panel panel-primary post">
    <header class="panel-heading">
        <h1 class="text-center">
            <span class="glyphicon glyphicon-envelope pull-left"></span>{{ post.title }}
            {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                {% if (post.user.id == app.user.id) or is_granted('ROLE_ADMIN') %}
                    <div class="pull-right btn-group" role="group">
                        <a href="{{ path("app_post_edit",   { 'id': post.id, 'callback': callback }) }}"
                           class="btn btn-warning btn-sm" data-toggle="tooltip" data-placement="top"
                           data-original-title="Éditer ce message">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a href="{{ path("app_post_delete", { 'id': post.id, 'callback': callback|remove_url_query }) }}"
                           class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top"
                           data-original-title="Supprimer ce message">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    </div>
                {% endif %}
            {% endif %}
        </h1>
    </header>
    <div class="panel-body">
        <div class="row">
            <figure class="col-xs-12 col-md-3 text-center">
                <a href="{{ path('app_user_show', { 'slug': post.user.slug }) }}">
                    <img src="{{ post.user.avatar ? post.user.avatar : asset('img/user.jpg') }}"
                         alt="{{ post.user.username }}" class="img-rounded img-responsive"/>
                </a>
            </figure>
            <div class="col-xs-12 col-md-9">
                {{ post.content|raw|nl2br }}
            </div>
        </div>

        <div class="row">
            <div class="tags col-xs-12 col-sm-6">
                {% for tag in post.tags %}
                    <a href="{{ path('app_post_index', { 'tag': tag.name }) }}" class="label label-{{ tag.type }}">
                        {{ tag.name }}
                    </a>&nbsp;
                {% endfor %}
            </div>
            <div class="comments col-xs-12 col-sm-6">
                <a href="{{ path('app_post_show', { 'slug': post.slug }) }}" class="btn btn-primary btn-sm">
                    Commentaires
                    <span class="badge">{{ post.comments|length }}</span>
                </a>
            </div>
        </div>
    </div>
    <footer class="panel-footer">
        <div class="row">
            <div class="pull-left">
                <span class="glyphicon glyphicon-send"></span>&nbsp;Publié
                le: {{ post.dateCreated|date('d/m/Y H:i:s') }}
            </div>
            <div class="pull-right">
                <a href="{{ path('app_user_show', { 'slug': post.user.slug }) }}">
                    {% if "ROLE_ADMIN" in post.user.roles %}
                        <span class="glyphicon glyphicon-king"></span>
                    {% else %}
                        <span class="glyphicon glyphicon-user"></span>
                    {% endif %}
                    &nbsp;{{ post.user.username }}</a>&nbsp;
            </div>
        </div>
    </footer>
</article>