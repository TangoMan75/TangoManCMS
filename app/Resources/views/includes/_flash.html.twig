{% if app.session.flashbag.has('success') %}
    <div class="alert alert-success alert-dismissible anim-alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {% for message in app.session.flashbag.get('success') %}
            <p><span class="glyphicon glyphicon-ok-sign"></span>&nbsp;{{ message|raw }}</p>
        {% endfor %}
    </div>
{% endif %}

{% if app.session.flashbag.has('error') %}
    <div class="alert alert-danger alert-dismissible anim-alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {% for message in app.session.flashbag.get('error') %}
            <p><span class="glyphicon glyphicon-remove-sign"></span>&nbsp;{{ message|raw }}</p>
        {% endfor %}
    </div>
{% endif %}