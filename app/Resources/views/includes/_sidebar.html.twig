<div id="sidebar">
    <div class="user-avatar">
        <img src="{{ user.avatar ? user.avatar : asset('img/user.jpg') }}" alt="{{ user.username }}"
             class="img-responsive">
    </div>

    <div class="sidebar-username">
        {{ user.username }}
    </div>

    <div class="sidebar-roles">
        <ul>
            {% for role in user.roles %}
                <li>{{ role }}</li>
            {% endfor %}
        </ul>
    </div>

    <div class="sidebar-menu">
        <ul class="navbar nav navbar-default">
            <li>
                <a href="{{ path('app_admin_index') }}"
                   {% if app.request.attributes.get('_route') starts with 'app_admin_index' %}class="active"{% endif %}>
                    <i class="glyphicon glyphicon-home"></i>
                    Tableau de bord
                </a>
            </li>
            <li>
                <a href="{{ path('app_admin_userlist') }}"
                        {% if app.request.attributes.get('_route') starts with 'app_admin_userlist' %} class="active"{% endif %}>
                    <i class="glyphicon glyphicon-user"></i>
                    Utilisateurs
                </a>
            </li>
            <li>
                <a href="#" target="_blank">
                    <i class="glyphicon glyphicon-ok"></i>
                    Emargement
                </a>
            </li>
        </ul>
    </div>
</div>