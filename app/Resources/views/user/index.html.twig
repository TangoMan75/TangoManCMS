{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center user-list">Liste des utilisateurs</h1>

    {% if is_granted('ROLE_ADMIN') %}
        <table id="user-index" class="table-striped">
            <thead>
            <tr>
                <th class="{{ app.request.query.get('order') == 'id' ? app.request.query.get('way', 'ASC') }}">
                    <a href="{{ path('user_index', {
                        'order': 'id',
                        'way': app.request.query.get('order') == 'id' and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'
                    }) }}">
                        ID
                    </a>
                </th>

                <th class="{{ app.request.query.get('order') == 'username' ? app.request.query.get('way', 'ASC') }}">
                    <a href="{{ path('user_index', {
                        'order': 'username',
                        'way': app.request.query.get('order') == 'username' and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'
                    }) }}">
                        Utilisateur
                    </a>
                </th>

                <th class="{{ app.request.query.get('order') == 'email' ? app.request.query.get('way', 'ASC') }}">
                    <a href="{{ path('user_index', {
                        'order': 'email',
                        'way': app.request.query.get('order') == 'email' and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'
                    }) }}">
                        Email
                    </a>
                </th>

                <th class="{{ app.request.query.get('order') == 'dateCreated' ? app.request.query.get('way', 'ASC') }}">
                    <a href="{{ path('user_index', {
                        'order': 'dateCreated',
                        'way': app.request.query.get('order') == 'dateCreated' and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'
                    }) }}">
                        Date de création
                    </a>
                </th>

                <th class="{{ app.request.query.get('order') == 'posts' ? app.request.query.get('way', 'DESC') }}">
                    <a href="{{ path('user_index', {
                        'order': 'posts',
                        'way': app.request.query.get('order') == 'posts' and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'
                    }) }}">
                        Post
                    </a>
                </th>

                <th class="{{ app.request.query.get('order') == 'comments' ? app.request.query.get('way', 'DESC') }}">
                    <a href="{{ path('user_index', {
                        'order': 'comments',
                        'way': app.request.query.get('order') == 'comments' and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'
                    }) }}">
                        Commentaires
                    </a>
                </th>

                <th>Role</th>
                <th colspan="2">Token</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                {% set user = user[0] %}
                <tr>
                    <td>
                        <a href="{{ path('user_show', { 'username': user.username }) }}">{{ user.id }}</a>
                    </td>
                    <td>
                        <a href="{{ path('user_show', { 'username': user.username }) }}">{{ user.username }}</a>
                    </td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.dateCreated|date('d/m/Y H:i:s') }}</td>
                    <td>
                        <span class="label label-primary">&nbsp;{{ user.posts | length }}&nbsp;</span>
                    </td>
                    <td>
                        <span class="label label-success">&nbsp;{{ user.comments | length }}&nbsp;</span>
                    </td>
                    <td>
                        {% if 'ROLE_ADMIN' in user.roles %}
                            <a href="{{ path('user_remove_role', { 'id': user.id, 'role': 'ROLE_ADMIN' }) }}" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-king"></span>&nbsp;admin</a>
                        {% else %}
                            <a href="{{ path('user_add_role', { 'id': user.id, 'role': 'ROLE_ADMIN' }) }}" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-pawn"></span>&nbsp;user</a>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_resend_token', { 'id': user.id }) }}" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-share"></span>&nbsp;Renvoyer</button>
                    </td>
                    {% if user.token %}
                        <td>
                            <a href="{{ path('app_validate', { 'id': user.id }) }}" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-thumbs-up"></span>&nbsp;Valider</button>
                        </td>
                    {% else %}
                        <td>
                            <span class="glyphicon glyphicon-ok text-success"></span>
                        </td>
                    {% endif %}
                    <td>
                        <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target=".my-modal" data-username="{{ user.username }}" data-url="{{ path('user_delete', { 'id': user.id }) }}"><span class="glyphicon glyphicon-trash"></span>&nbsp;Supprimer</button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center">
            {{ pagination(users) }}
        </div>
        <div class="text-center">
            <p>Exporter la liste d'utilisateurs <a href="{{ path('user_export') }}" target="_blank" class="btn btn-primary btn-sm">Format Json</a>&nbsp;<a href="{{ path('user_export') }}" target="_blank" class="btn btn-primary btn-sm">Format CSV</a></p>
        </div>
        <div class="modal fade my-modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModal"><span class="glyphicon glyphicon-trash"></span>&nbsp;Confirmer suppression</h4>
                    </div>
                    <div class="modal-body">
                        <p>Êtes vous sûr que vous voulez définitivement supprimer l'utilisateur: <strong></strong> et tous ses messages ?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Non</button>
                        <a class="btn btn-danger" href="#">Supprimer</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-xs-12">
                <p class="text-center">Vous devez être administrateur pour accèder à ces informations.</p>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/modal.js') }}"></script>
{% endblock %}
