{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Liste des utilisateurs</h1>

    {% if is_granted('ROLE_ADMIN') %}
        <table id="user-index" class="table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Utilisateur</th>
                <th>Email</th>
                <th>Date de création</th>
                <th>Role</th>
                <th>Token</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', { 'username': user.username }) }}">{{ user.id }}</a></td>
                    <td><a href="{{ path('user_show', { 'username': user.username }) }}"><span class="glyphicon glyphicon-eye-open"></span>&nbsp;{{ user.username }}</a></td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.dateCreated|date('d/m/Y H:i:s') }}</td>
                    <td>
                        {% if 'ROLE_ADMIN' in user.roles %}
                            <a href="{{ path('user_remove_role', { 'id': user.id, 'role': 'ROLE_ADMIN' }) }}" class="btn btn-warning btn-sm"><span class="glyphicon glyphicon-king"></span>&nbsp;admin</a>
                        {% else %}
                            <a href="{{ path('user_add_role', { 'id': user.id, 'role': 'ROLE_ADMIN' }) }}" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-pawn"></span>&nbsp;user</a>
                        {% endif %}
                    </td>
                    <td><a href="{{ path('user_resend', { 'id': user.id }) }}" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-share"></span>&nbsp;Renvoyer</button></td>
                    <td><button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target=".my-modal" data-username="{{ user.username }}" data-url="{{ path('user_delete', { 'id': user.id }) }}"><span class="glyphicon glyphicon-trash"></span>&nbsp;Supprimer</button></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="modal fade my-modal" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModal"><span class="glyphicon glyphicon-trash"></span>&nbsp;Confirm deletion</h4>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete user: <strong></strong> permanently and all his posts ?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <a class="btn btn-danger" href="#">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-xs-12">
                <p class="text-center">Vous devez être administrateur pour accèder à ces informations.</p>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/modal.js') }}"></script>
{% endblock %}
