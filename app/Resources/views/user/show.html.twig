{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} | {{ user.username | capitalize }}{% endblock %}

{% block body %}

    {% include "includes/_user-profile.html.twig" with {'user': user } %}

    <section id="posts">
        {% for post in list_post %}
            {% include "includes/_post.html.twig"  with {'uri': app.request.uri} %}
        {% else %}
            <p class="text-center">{{ user.username | capitalize }} n'a publi√© aucun message.</p>
        {% endfor %}
        <div class="text-center">
        {{ pagination(list_post) }}
        </div>
    </section>
{% endblock %}
