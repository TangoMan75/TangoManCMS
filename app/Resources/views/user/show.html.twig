{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} | {{ user.username }}{% endblock %}

{% block body %}
    <div class="container">

        {% include "includes/_user-profile.html.twig" with {'user': user } %}

        <section id="posts">
            {% for post in posts %}
                {% include "includes/_post.html.twig"  with { 'callback': app.request.uri|callback } %}
            {% else %}
                <p class="text-center"><strong>{{ user.username }}</strong> n'a publi√© aucun
                    message.</p>
            {% endfor %}
            <div class="text-center">
                {{ pagination(posts) }}
            </div>
        </section>
    </div>

{% endblock %}
