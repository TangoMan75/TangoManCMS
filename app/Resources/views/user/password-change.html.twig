{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ page.title }}{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container">
    <div id="password-form" class="jumbotron">
        <div class="row">
            <h2 class="text-center">Renouvellement de mot de passe</h2>
            <p class="text-center">Enregistrez votre nouveau mot de passe ci-dessous.</p>
            {{ form_start(formPassword) }}
            {{ form_widget(formPassword) }}
            <input type="submit" class="btn btn-primary center-block" value="Valider"/>
            {{ form_end(formPassword) }}
        </div>
    </div>
</div>
{% endblock %}
