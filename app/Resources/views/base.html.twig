<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <meta charset="UTF-8" />
        <title>{% block title %}{{ site_name }}{% endblock %}</title>

        <!-- Disables Internet Explorer compatibility mode (for IE 9 and IE 8 support) -->
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <!-- Sets page scale to 1 -->
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Favicon -->
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.png') }}" />

        <!-- Meta -->
        <meta name="autor" content="Matthias Morin">
        <meta name="copyright" content="2016 Matthias Morin">
        <meta name="subject" content="{{ site_name }}">
        <meta name="description" content="Matthias Morin | Livre D'Or">
        <meta name="keywords" content="{{ site_name }}">
        <meta name="revisit-after" content="30">
        <meta name="robots" content="all">
        <meta http-equiv="robots" content="all">
        <meta http-equiv="window-target" content="_blank_top">

        {% block stylesheets %}
            <!-- <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" /> -->
            <link rel="stylesheet" href="{{ asset('css/livredor.css') }}" />
            <!-- Use with Gulp inject -->
            <!-- inject:css -->
            <!-- endinject -->
        {% endblock %}

        <!-- Google fonts CDN -->
        <!-- <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Ubuntu|Roboto:100" /> -->

        <!-- Bootstrap CSS CDN -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <!-- Note: normalize.css, and reset.css are unnecessary with Bootstrap -->

        <!-- Font-awesome CDN -->
        <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" /> -->

    {% endblock %}
</head>
<body id="page-top" data-spy="scroll" data-target=".navbar">

<div class="container">
    <!-- Header -->
    <header role="banner">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('app_homepage') }}"><span class="glyphicon glyphicon-book"></span>&nbsp;{{ site_name }}</a>
                </div>
                <div class="collapse navbar-collapse">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <ul class="nav navbar-nav navbar-left">
                            {% if app.request.get('_route') == 'app_homepage' %}
                                <li><a href="#post-form" class="smooth"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Publier</a></li>
                            {% elseif app.request.get('_route') == 'post_index' %}
                                <li><a href="#post-form"><span class="glyphicon glyphicon-comment"></span>&nbsp;Commenter</a></li>
                            {% else %}
                                <li><a href="{{ path('post_new', {'callback': app.request.uri }) }}"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Publier</a></li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                            <li><a href="{{ path('user_index') }}"><span class="glyphicon glyphicon-cog"></span>&nbsp;Utilisateurs</a></li>
                            {% endif %}
                        </ul>
                    {% endif %}
                    <ul class="nav navbar-nav navbar-right">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li><a href="{{ path('user_show', { 'username':app.user.username }) }}"><span class="glyphicon glyphicon-user"></span>&nbsp;{{ app.user.username|capitalize }}</a></li>
                            <li><a href="{{ path('user_edit', { 'id':app.user.id, 'callback': app.request.uri }) }}"><span class="glyphicon glyphicon-cog"></span>&nbsp;Mon Compte</a></li>
                            <li><a href="{{ path('app_logout') }}"><span class="glyphicon glyphicon-off"></span>&nbsp;DÃ©connection</a></li>
                        {% else %}
                            <li><a href="{{ path('user_register', { 'callback': app.request.uri }) }}"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;Inscription</a></li>
                            <li><a href="{{ path('app_login') }}"><span class="glyphicon glyphicon-lock"></span>&nbsp;Connexion</a></li>
                        {% endif %}
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    {% include "includes/_flash.html.twig" %}
    {% block body %}
    {% endblock %}
</div>
<footer id="footer"><p>Copyright 2016 | Matthias Morin</p></footer>

