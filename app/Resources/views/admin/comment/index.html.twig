{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Commentaires{% endblock %}

{% block admin %}
    <header>
        <h1>Commentaires</h1>
        <h2>Liste des commentaires</h2>
        <p>Ici vous pouvez modérer les commentaires laissés par les visiteurs de {{ site_name }}.</p>
    </header>
    {% include "admin/includes/_comment_tabs.html.twig" %}
    <section id="search">
        <div class="jumbotron">
            <form method="GET" class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <label class="control-label col-sm-4" for="inputId">Id</label>
                        <div class="col-sm-8">
                            <input type="text" name="s_id" id="inputId" class="form-control"
                                   value="{{ app.request.get('s_id') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <label class="control-label col-sm-4" for="inputPost">Article</label>
                        <div class="col-sm-8">
                            <input type="text" name="s_post" id="inputPost" class="form-control"
                                   value="{{ app.request.get('s_post') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <label class="control-label col-sm-4" for="inputUser">Auteur</label>
                        <div class="col-sm-8">
                            <input type="text" name="s_user" id="inputUser" class="form-control"
                                   value="{{ app.request.get('s_user') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <label class="control-label col-sm-4" for="inputContent">Contenu</label>
                        <div class="col-sm-8">
                            <input type="text" name="s_content" id="inputContent" class="form-control"
                                   value="{{ app.request.get('s_content') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <label class="control-label col-sm-4" for="inputPublished">Publié</label>
                        <div class="col-sm-8">
                            <input type="checkbox" name="s_published" id="inputPublished" class="checkbox"
                                   value="1"{% if app.request.query.get('s_published') %} checked{% endif %}/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 text-right pull-right">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span> Filtrer ({{ comments.count }})
                        </button>
                        <button id="reset" class="btn btn-warning">
                            <span class="glyphicon glyphicon-remove"></span> Effacer
                        </button>
                    </div>

                    <input type="hidden" name="page" value="1"/>
                    <input type="hidden" name="order" value="{{ app.request.query.get('order', 'post') }}"/>
                    <input type="hidden" name="way" value="{{ app.request.query.get('way', 'ASC') }}"/>
                </div>
            </form>
        </div>
    </section>

    <section id="page-list">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="{{ app.request.query.get('order') == 'id' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_comment_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'id',
                            'way'   : app.request.query.get('order') == 'id'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Id
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'post' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_comment_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'post',
                            'way'   : app.request.query.get('order') == 'post'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Article
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'user' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_comment_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'user',
                            'way'   : app.request.query.get('order') == 'user'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Auteur
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'content' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_comment_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'content',
                            'way'   : app.request.query.get('order') == 'content'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Contenu
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'published' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_comment_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'published',
                            'way'   : app.request.query.get('order') == 'published'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Publié
                        </a>
                    </th>
                    <th colspan="2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in comments %}
                    {% set comment = comment[0] %}
                    <tr>
                        <td>
                            <a href="{{ path('app_admin_comment_edit', { 'id': comment.id }) }}">
                                {{ comment.id }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('app_post_show', { 'slug': comment.post.slug }) }}">
                                {{ comment.post.title }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('app_user_show', { 'slug': comment.user.slug }) }}">
                                {{ comment.user.username }}
                            </a>
                        </td>
                        <td>
                            {{ comment.content|striptags|truncate(255) }}
                        </td>
                        <td>
                            {% if comment.published %}
                                <a href="{{ path('app_admin_comment_index', app.request.query.all|merge({'s_published' : 1})) }}"
                                   class="btn btn-success btn-xs">
                                    <span class="glyphicon glyphicon-ok"></span>
                                </a>
                            {% else %}
                                <a href="{{ path('app_admin_comment_index', app.request.query.all|merge({'s_published' : 0})) }}"
                                   class="btn btn-warning btn-xs">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_comment_edit', { 'id': comment.id, 'callback': app.request.uri }) }}"
                               class="btn btn-warning btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Modifier
                            </a>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                    data-target=".my-modal" data-item="{{ comment.id }}"
                                    data-path="{{ path('app_admin_comment_delete', { 'id': comment.id, 'callback': app.request.uri }) }}">
                                <span class="glyphicon glyphicon-trash"></span>
                                Supprimer
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            {{ pagination(comments) }}
        </div>
    </section>
    {% include "admin/includes/_delete-comment-modal.html.twig" %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/modal.js') }}"></script>
    <script>
        $('#reset').click(function () {
            $('form').find('input:text, input:password, select, textarea').val('');
            $('form').find('input:radio, input:checkbox').prop('checked', false);
        });
    </script>
{% endblock %}