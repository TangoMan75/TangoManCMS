{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Commentaires - Modifier {{ comment.post.title }}{% endblock %}

{% block head %}
    {{ parent() }}
    {% if app.user %}
        <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
        <script>tinymce.init({selector: 'textarea', height: '250'});</script>
    {% endif %}
{% endblock %}

{% block admin %}
    <header>
        <h1>Commentaires</h1>
        <h2>Modifier le commentaire &quot;{{ comment.text|striptags|truncate(20) }}&quot;</h2>
        <p>Ici vous pouvez modifier le commentaire &quot;{{ comment.text|striptags|truncate(20) }}&quot; de l'article <strong>&quot;{{ comment.post.title }}&quot;</strong></p>
    </header>
    {% include "admin/includes/_comment_tabs.html.twig" %}
    <section id="edit">
        <div class="jumbotron">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="text-center">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-thumbs-up"></span>
                    Valider
                </button>
                <a href="{{ path('app_admin_comment_index') }}" class="btn btn-warning">
                    <span class="glyphicon glyphicon-thumbs-down"></span>
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
