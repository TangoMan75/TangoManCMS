{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Médias - Exporter{% endblock %}

{% block admin %}
    <header>
        <h1>Medias</h1>
        <h2>Exporter la liste de médias</h2>
        {% if is_granted('ROLE_ADMIN') %}
            <p>Ici vous pouvez exporter les médias de <strong>{{ site_name }}</strong> au format JSON.</p>
        {% else %}
            <p>Vous devez possèder des droits administrateur pour effectuer cette action.</p>
        {% endif %}
    </header>

    {{ menu('{
        "items": [
            {
                "label": "Liste",
                "route": "app_admin_media_index",
                "active": "app_admin_media_index",
                "icon": "glyphicon glyphicon-list"
            },
            {
                "label": "Ajouter",
                "route": "app_admin_media_new",
                "active": "app_admin_media_new",
                "callback": true,
                "icon": "glyphicon glyphicon-plus"
            },
            {
                "label": "Importer",
                "route": "app_admin_media_import",
                "active": "app_admin_media_import",
                "icon": "glyphicon glyphicon-import"
            },
            {
                "label": "Exporter",
                "route": "app_admin_media_export",
                "active": "app_admin_media_export",
                "icon": "glyphicon glyphicon-export"
            }
        ]
    }', 'tabs') }}

    {% if is_granted('ROLE_ADMIN') %}
        <section id="export">
            <div class="col-xs-12 col-md-6">
                <div id="export" class="panel panel-success">
                    <div class="panel-heading">
                        <h1 class="text-center">
                            Exporter la liste de médias
                        </h1>
                    </div>
                    <div class="panel-body text-center">
                        <p><strong>{{ listMedia|length }}</strong> medias</p>
                        <a href="{{ path('app_admin_media_exportjson') }}" class="btn btn-primary">
                            <span class="glyphicon glyphicon-export"></span>
                            Exporter
                        </a>
                    </div>
                    <div class="panel-footer"></div>
                </div>
            </div>
        </section>
    {% endif %}
{% endblock %}