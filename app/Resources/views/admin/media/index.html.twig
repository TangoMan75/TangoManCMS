{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Articles{% endblock %}

{% block admin %}
    <header>
        <h1>Medias</h1>
        <h2>Liste des medias</h2>
        <p>Ici vous pouvez accèder à la liste des médias de <strong>{{ site_name }}</strong>.</p>
    </header>
    {% include "admin/includes/_media_tabs.html.twig" %}

    <section id="search">
        <div class="jumbotron">
            <form method="GET" class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputTitle">Titre</label>
                        <div class="col-sm-8">
                            <input type="text" name="title" id="inputTitle" class="form-control"
                                   value="{{ app.request.get('title') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputLink">Lien</label>
                        <div class="col-sm-8">
                            <input type="text" name="link" id="inputLink" class="form-control"
                                   value="{{ app.request.get('link') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputCategory">Type</label>
                        <div class="col-sm-8">
                            <input type="text" name="type" id="inputCategory" class="form-control"
                                   value="{{ app.request.get('category') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputText">Description</label>
                        <div class="col-sm-8">
                            <input type="text" name="text" id="inputText" class="form-control"
                                   value="{{ app.request.get('text') }}"/>
                        </div>
                    </div>


                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputUser">Auteur</label>
                        <div class="col-sm-8">
                            <input type="text" name="user" id="inputUser" class="form-control"
                                   value="{{ app.request.get('user') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputPage">Section</label>
                        <div class="col-sm-8">
                            <input type="text" name="s_page" id="inputPage" class="form-control"
                                   value="{{ app.request.get('s_page') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputTag">Étiquette</label>
                        <div class="col-sm-8">
                            <input type="text" name="tag" id="inputTag" class="form-control"
                                   value="{{ app.request.get('tag') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="selectPublished">Publication</label>
                        <div class="col-sm-8">
                            <select name="published" id="selectPublished" class="form-control">
                                <option value="">Tous</option>
                                <option value="true"
                                        {% if app.request.get('published') == "true" %}selected{% endif %}>
                                    Publié
                                </option>
                                <option value="false"
                                        {% if app.request.get('published') == "false" %}selected{% endif %}>
                                    Non-publié
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 text-right pull-right">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span> Filtrer ({{ listMedia.count }})
                        </button>
                        <button id="reset" class="btn btn-warning">
                            <span class="glyphicon glyphicon-remove"></span> Effacer
                        </button>
                    </div>

                    <input type="hidden" name="page" value="1"/>
                    <input type="hidden" name="order" value="{{ app.request.query.get('order', 'title') }}"/>
                    <input type="hidden" name="way" value="{{ app.request.query.get('way', 'ASC') }}"/>
                </div>
            </form>
        </div>
    </section>

    <section id="media-list">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="{{ app.request.query.get('order') == 'image' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'image',
                            'way'   : app.request.query.get('order') == 'image'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Image
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'title' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'title',
                            'way'   : app.request.query.get('order') == 'title'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Titre
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'link' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'link',
                            'way'   : app.request.query.get('order') == 'link'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Lien
                        </a>
                    </th>

                    <th colspan="2" class="{{ app.request.query.get('order') == 'author' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'author',
                            'way'   : app.request.query.get('order') == 'author'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Auteur
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'text' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'text',
                            'way'   : app.request.query.get('order') == 'text'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Description
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'comments' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'comments',
                            'way'   : app.request.query.get('order') == 'comments'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Commentaires
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'views' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'views',
                            'way'   : app.request.query.get('order') == 'views'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Vues
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'section' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'section',
                            'way'   : app.request.query.get('order') == 'section'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Section
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'tags' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'tags',
                            'way'   : app.request.query.get('order') == 'tags'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Étiquettes
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'created' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'created',
                            'way'   : app.request.query.get('order') == 'created'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Création
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'modified' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'modified',
                            'way'   : app.request.query.get('order') == 'modified'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Modification
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'published' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_media_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'published',
                            'way'   : app.request.query.get('order') == 'published'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Publication
                        </a>
                    </th>

                    <th colspan="2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for media in listMedia %}
                    {% set media = media[0] %}
                    <tr>
                        <td>
                            {% if media.imageFileName %}
                                <a href="{{ media.image }}" target="_blank" class="cover"
                                        style="padding-bottom: 80px; background-image: url('{{ media.image ? media.image|imagine_filter('thumbnail') : '//placehold.it/80?text=Image' }}');">
                                </a>
                            {% else %}
                                <a href="{{ path('app_post_show', { 'slug': media.slug }) }}" class="cover"
                                   style="padding-bottom: 80px; background-image: url('{{ media.image ? media.image : '//placehold.it/80?text=Image' }}');">
                                </a>
                            {% endif %}
                        </td>

                        <td>
                            <a href="{{ path('app_media_show', { 'slug': media.slug }) }}">
                                {{ media }}
                            </a>
                        </td>

                        <td class="table-wrap">
                            <a href="{{ media.link }}" target="_blank">
                                {{ absolute_url(media.link) }}
                            </a>
                        </td>

                        <td>
                            <a href="{{ path('app_admin_user_index', { 'user': media.user.username }) }}" class="cover"
                               data-toggle="tooltip" data-placement="top"
                               data-original-title="Afficher les détails de &quot;{{ media.user }}&quot;"
                               style="padding-bottom: 30px; width: 30px; background-image: url('{{ media.user.avatar ? media.user.avatar : asset('img/user.jpg') }}');">
                            </a>
                        </td>

                        <td>
                            <a href="{{ path('app_admin_media_index', { 'user': media.user.username }) }}"
                               data-toggle="tooltip" data-placement="top"
                               data-original-title="Lister tous les médias publiés par &quot;{{ media.user }}&quot;">
                                {{ media.user }}
                            </a>
                        </td>

                        <td>
                            <div class="table-text">
                                {{ media.text|striptags|truncate(255) }}
                            </div>
                        </td>

                        <td>
                            {% if media.comments|length > 1 %}
                                <a href="{{ path('app_admin_comment_index', { 'media' : media.title }) }}"
                                   class="label label-success"
                                   data-toggle="tooltip" data-placement="top"
                                   data-original-title="Lister les {{ media.comments|length }} commentaires reçu par le média &quot;{{ media }}&quot;"
                                >
                                    Commentaires
                                    <span class="badge-sm text-success">{{ media.comments|length }}</span>
                                </a>
                            {% elseif media.comments|length > 0 %}
                                {% for comment in media.comments %}
                                    <a href="{{ path('app_admin_comment_index', { 'media' : media.title }) }}"
                                       class="label label-primary"
                                       data-toggle="tooltip" data-placement="top"
                                       data-original-title="Voir le détail du commentaire &quot;{{ comment }}&quot; reçu par le média &quot;{{ media }}&quot;"
                                    >
                                        {{ comment|truncate(15) }}
                                    </a>
                                {% endfor %}
                            {% else %}
                                <span class="label label-danger"
                                      data-toggle="tooltip" data-placement="top"
                                      data-original-title="Le média &quot;{{ media }}&quot; n'a reçu aucun commentaire"
                                >
                                        Aucun commentaire
                                    </span>
                            {% endif %}
                        </td>

                        <td>
                            <span class="label label-success">
                                {% if media.views %}{{ media.views }}{% else %}0{% endif %}
                            </span>
                        </td>

                        <td>
                            {% if media.sections|length > 1 %}
                                <a href="{{ path('app_admin_gallery_index', { 'media': media.title }) }}"
                                   class="label label-success"
                                   data-toggle="tooltip" data-placement="top"
                                   data-original-title="Lister les {{ media.sections|length }} sections contenant le média &quot;{{ media }}&quot;"
                                >
                                    Sections
                                    <span class="badge-sm text-success">{{ media.sections|length }}</span>
                                </a><br/>
                            {% endif %}

                            {% for section in media.sections %}
                                {% if loop.index < 6 %}
                                    <a href="{{ path('app_admin_gallery_index', { 'title': section.title }) }}"
                                       class="label label-primary"
                                       data-toggle="tooltip" data-placement="top"
                                       data-original-title="Voir le détail de la galerie &quot;{{ section|truncate(20) }}&quot; contenant le média &quot;{{ media }}&quot;"
                                    >
                                        {{ section|truncate(20) }}
                                        <span class="badge-sm text-primary">{{ section.posts|length }}</span>
                                    </a><br/>
                                {% elseif loop.last %}
                                    <span class="label label-primary">...</span>
                                {% endif %}
                            {% else %}
                                <span class="label label-danger"
                                      data-toggle="tooltip" data-placement="top"
                                      data-original-title="Le média &quot;{{ media }}&quot; n'appartient à aucune galerie"
                                >
                                    Aucune galerie
                                </span>
                            {% endfor %}
                        </td>

                        <td>
                            <span class="small">
                                {{ media.created|date('d/m/Y H:i:s') }}
                            </span>
                        </td>

                        <td>
                            <span class="small">
                                {{ media.modified|date('d/m/Y H:i:s') }}
                            </span>
                        </td>

                        <td>
                            {% if media.published %}
                                <a href="{{ path('app_admin_media_publish', { 'id': media.id, 'publish': 0, 'callback': app.request.uri|callback }) }}"
                                   class="btn btn-success btn-xs" data-toggle="tooltip" data-placement="top"
                                   data-original-title="Retirer la publication de &quot;{{ media }}&quot;">
                                    <span class="glyphicon glyphicon-ok"></span>
                                </a>
                            {% else %}
                                <a href="{{ path('app_admin_media_publish', { 'id': media.id, 'publish': 1, 'callback': app.request.uri|callback }) }}"
                                   class="btn btn-warning btn-xs" data-toggle="tooltip" data-placement="top"
                                   data-original-title="Publier &quot;{{ media }}&quot;">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>
                            {% endif %}
                        </td>

                        <td>
                            <a href="{{ path('app_admin_media_edit', { 'id': media.id, 'callback': app.request.uri|callback }) }}"
                               class="btn btn-warning btn-sm"
                               data-toggle="tooltip" data-placement="top"
                               data-original-title="Modifier le média &quot;{{ media }}&quot;"
                            >
                                <span class="glyphicon glyphicon-edit"></span>
                                Modifier
                            </a>
                        </td>

                        <td data-toggle="tooltip" data-placement="top"
                            data-original-title="Supprimer le média &quot;{{ media }}&quot;"
                        >
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                    data-target=".my-modal" data-item="{{ media }}"
                                    data-path="{{ path('app_admin_media_delete', { 'id': media.id, 'callback': app.request.uri|remove_query }) }}">
                                <span class="glyphicon glyphicon-trash"></span>
                                Supprimer
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            {{ pagination(listMedia) }}
        </div>
    </section>
    {% include "admin/includes/_delete-media-modal.html.twig" %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/modal.js') }}"></script>
    <script>
        $('#reset').click(function () {
            $('form').find('input:text, input:password, select, textarea').val('');
            $('form').find('input:radio, input:checkbox').prop('checked', false);
        });
    </script>
{% endblock %}