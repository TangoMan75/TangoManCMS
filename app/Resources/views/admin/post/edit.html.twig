{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Article - Modifier {{ post.title }}{% endblock %}

{% block head %}
    {{ parent() }}
    {% if app.user %}
        <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
        <script>tinymce.init({selector: 'textarea', height: '250'});</script>
    {% endif %}
{% endblock %}

{% block admin %}
    <header>
        <h1>Articles</h1>
        <h2>Modifier l'article &quot;{{ post.title }}&quot;</h2>
        <p>Ici vous pouvez modifier l'article &quot;{{ post.title }}&quot; de {{ site_name }}</p>
    </header>
    {% include "admin/includes/_post_tabs.html.twig" %}
    <section id="edit">
        <div class="jumbotron">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary center-block">
                <span class="glyphicon glyphicon-send"></span>
                Valider
            </button>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
