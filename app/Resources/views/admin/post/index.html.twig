{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Articles{% endblock %}

{% block admin %}
    <header>
        <h1>Articles</h1>
        <h2>Liste des articles</h2>
        <p>Ici vous pouvez accèder à la liste des articles de {{ site_name }}.</p>
    </header>
    {% include "admin/includes/_post_tabs.html.twig" %}

    <section id="search">
        <div class="jumbotron">
            <form method="GET" class="form-horizontal">
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <label class="control-label col-sm-4" for="inputId">Id</label>
                            <div class="col-sm-8">
                                <input type="text" name="s_id" id="inputId" class="form-control"
                                       value="{{ app.request.get('s_id') }}"/>
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <label class="control-label col-sm-4" for="inputTitle">Titre</label>
                            <div class="col-sm-8">
                                <input type="text" name="s_title" id="inputTitle" class="form-control"
                                       value="{{ app.request.get('s_title') }}"/>
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <label class="control-label col-sm-4" for="inputSubtitle">Sous-titre</label>
                            <div class="col-sm-8">
                                <input type="text" name="s_subtitle" id="inputSubtitle" class="form-control"
                                       value="{{ app.request.get('s_subtitle') }}"/>
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <label class="control-label col-sm-4" for="inputContent">Contenu</label>
                            <div class="col-sm-8">
                                <input type="text" name="s_content" id="inputContent" class="form-control"
                                       value="{{ app.request.get('s_content') }}"/>
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <label class="control-label col-sm-4" for="inputUser">Auteur</label>
                            <div class="col-sm-8">
                                <input type="text" name="s_user" id="inputUser" class="form-control"
                                       value="{{ app.request.get('s_user') }}"/>
                            </div>
                        </div>

                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <label class="control-label col-sm-4" for="inputTag">Étiquette</label>
                            <div class="col-sm-8">
                                <input type="text" name="s_tag" id="inputTag" class="form-control"
                                       value="{{ app.request.get('s_tag') }}"/>
                            </div>
                        </div>

                    </div>
                    <input type="hidden" name="page"  value="1"/>
                    <input type="hidden" name="order" value="{{ app.request.query.get('order', 'title') }}"/>
                    <input type="hidden" name="way"   value="{{ app.request.query.get('way', 'ASC') }}"/>
                    <div class="col-xs-12">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary">
                                <span class="glyphicon glyphicon-search"></span> Filtrer ({{ posts.count }})
                            </button>
                            <button id="reset" class="btn btn-warning">
                                <span class="glyphicon glyphicon-remove"></span> Effacer
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <section id="post-list">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="{{ app.request.query.get('order') == 'id' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'order' : 'id',
                            'way'   : app.request.query.get('order') == 'id'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Id
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'slug' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'order' : 'slug',
                            'way'   : app.request.query.get('order') == 'slug'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Slug
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'title' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'order' : 'title',
                            'way'   : app.request.query.get('order') == 'title'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Titre
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'subtitle' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'order' : 'subtitle',
                            'way'   : app.request.query.get('order') == 'subtitle'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Sous-titre
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'content' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'order' : 'content',
                            'way'   : app.request.query.get('order') == 'content'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Contenu
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'dateCreated' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'order' : 'dateCreated',
                            'way'   : app.request.query.get('order') == 'dateCreated'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Date de création
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'author' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'order' : 'author',
                            'way'   : app.request.query.get('order') == 'author'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Auteur
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'comments' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'order' : 'comments',
                            'way'   : app.request.query.get('order') == 'comments'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Commentaires
                        </a>
                    </th>
                    <th>Étiquette</th>
                    <th colspan="2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    {% set post = post[0] %}
                    <tr>
                        <td>
                            <a href="{{ path('app_post_show', { 'slug': post.slug }) }}">
                                {{ post.id }}
                            </a>
                        </td>
                        <td>{{ post.slug }}</td>
                        <td>
                            <a href="{{ path('app_post_show', { 'slug': post.slug }) }}">
                                {{ post.title }}
                            </a>
                        </td>
                        <td>{{ post.subtitle }}</td>
                        <td>
                            <div class="post-content">
                                {{ post.content|striptags|truncate(255) }}
                            </div>
                        </td>
                        <td>{{ post.dateCreated|date('d/m/Y H:i:s') }}</td>
                        <td>
                            <a href="{{ path('app_user_show', { 'slug': post.user.slug }) }}">
                                {{ post.user.username }}
                            </a>
                        </td>
                        <td>{{ post.comments|length }}</td>
                        <td>
                            {% for tag in post.tags %}
                                <a href="{{ path('app_admin_post_index', app.request.query.all|merge({'s_tag' : tag.name})) }}"
                                    class="label label-{{ tag.type }}">
                                    {{ tag.name }}
                                </a><br/>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_post_edit', { 'id': post.id, 'callback': app.request.uri }) }}"
                               class="btn btn-warning btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Modifier
                            </a>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                    data-target=".my-modal" data-item="{{ post.title }}"
                                    data-path="{{ path('app_admin_post_delete', { 'id': post.id, 'callback': app.request.uri }) }}">
                                <span class="glyphicon glyphicon-trash"></span>
                                Supprimer
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            {{ pagination(posts) }}
        </div>
    </section>
    {% include "admin/includes/_delete-post-modal.html.twig" %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/modal.js') }}"></script>
    <script>
        $('#reset').click(function () {
            $('form').find('input:text, input:password, select, textarea').val('');
            $('form').find('input:radio, input:checkbox').prop('checked', false);
        });
    </script>
{% endblock %}