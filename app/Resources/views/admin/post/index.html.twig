{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Articles{% endblock %}

{% block admin %}
    <header>
        <h1>Articles</h1>
        <h2>Liste des articles</h2>
        <p>Ici vous pouvez accèder à la liste des articles de <strong>{{ site_name }}</strong>.</p>
    </header>
    {% include "admin/includes/_post_tabs.html.twig" %}

    <section id="search">
        <div class="jumbotron">
            <form method="GET" class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputId">Id</label>
                        <div class="col-sm-8">
                            <input type="text" name="id" id="inputId" class="form-control"
                                   value="{{ app.request.get('id') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputSlug">Slug</label>
                        <div class="col-sm-8">
                            <input type="text" name="slug" id="inputSlug" class="form-control"
                                   value="{{ app.request.get('slug') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputTitle">Titre</label>
                        <div class="col-sm-8">
                            <input type="text" name="title" id="inputTitle" class="form-control"
                                   value="{{ app.request.get('title') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputText">Contenu</label>
                        <div class="col-sm-8">
                            <input type="text" name="text" id="inputText" class="form-control"
                                   value="{{ app.request.get('text') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputUser">Auteur</label>
                        <div class="col-sm-8">
                            <input type="text" name="user" id="inputUser" class="form-control"
                                   value="{{ app.request.get('user') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputPage">Page</label>
                        <div class="col-sm-8">
                            <input type="text" name="s_page" id="inputPage" class="form-control"
                                   value="{{ app.request.get('s_page') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputTag">Étiquette</label>
                        <div class="col-sm-8">
                            <input type="text" name="tag" id="inputTag" class="form-control"
                                   value="{{ app.request.get('tag') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="selectPublished">Publication</label>
                        <div class="col-sm-8">
                            <select name="published" id="selectPublished" class="form-control">
                                <option value="">Tous</option>
                                <option value="true"
                                        {% if app.request.get('published') == "true" %}selected{% endif %}>
                                    Publié
                                </option>
                                <option value="false"
                                        {% if app.request.get('published') == "false" %}selected{% endif %}>
                                    Non-publié
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 text-right pull-right">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span> Filtrer ({{ posts.count }})
                        </button>
                        <button id="reset" class="btn btn-warning">
                            <span class="glyphicon glyphicon-remove"></span> Effacer
                        </button>
                    </div>

                    <input type="hidden" name="page" value="1"/>
                    <input type="hidden" name="order" value="{{ app.request.query.get('order', 'title') }}"/>
                    <input type="hidden" name="way" value="{{ app.request.query.get('way', 'ASC') }}"/>
                </div>
            </form>
        </div>
    </section>

    <section id="post-list">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="{{ app.request.query.get('order') == 'id' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'id',
                            'way'   : app.request.query.get('order') == 'id'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Id
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'slug' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'slug',
                            'way'   : app.request.query.get('order') == 'slug'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Slug
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'title' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'title',
                            'way'   : app.request.query.get('order') == 'title'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Titre
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'text' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'text',
                            'way'   : app.request.query.get('order') == 'text'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Contenu
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'author' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'author',
                            'way'   : app.request.query.get('order') == 'author'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Auteur
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'page' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'page',
                            'way'   : app.request.query.get('order') == 'page'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Page
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'comments' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'comments',
                            'way'   : app.request.query.get('order') == 'comments'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Commentaires
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'tags' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'tags',
                            'way'   : app.request.query.get('order') == 'tags'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Étiquettes
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'created' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'created',
                            'way'   : app.request.query.get('order') == 'created'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Création
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'modified' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'modified',
                            'way'   : app.request.query.get('order') == 'modified'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Modification
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'published' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_post_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'published',
                            'way'   : app.request.query.get('order') == 'published'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Publication
                        </a>
                    </th>

                    <th colspan="2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    {% set post = post[0] %}
                    <tr>
                        <td>
                            <a href="{{ path('app_post_show', { 'slug': post.slug }) }}">
                                {{ post.id }}
                            </a>
                        </td>
                        <td>{{ post.slug }}</td>
                        <td>
                            <a href="{{ path('app_post_show', { 'slug': post.slug }) }}">
                                {{ post.title }}
                            </a>
                        </td>
                        <td>
                            <div class="table-text">
                                {{ post.text|striptags|truncate(255) }}
                            </div>
                        </td>
                        <td>
                            <a href="{{ path('app_user_show', { 'slug': post.user.slug }) }}">
                                {{ post.user.username }}
                            </a>
                        </td>
                        <td>
                            {% if post.page %}
                                <a href="{{ path('app_page_show', { 'slug': post.page.slug }) }}">
                                    {{ post.page.title|truncate(20) }}
                                </a>
                            {% endif %}
                        </td>
                        <td>
                            <span class="label label-success">
                                {{ post.comments|length }}
                            </span>
                        </td>
                        <td>
                            {% for tag in post.tags %}
                                <a href="{{ path('app_admin_post_index', app.request.query.all|merge({'tag' : tag.name})) }}"
                                   class="label label-{{ tag.type }}">
                                    {{ tag.name }}
                                </a><br/>
                            {% endfor %}
                        </td>
                        <td>{{ post.created|date('d/m/Y H:i:s') }}</td>
                        <td>{{ post.modified|date('d/m/Y H:i:s') }}</td>
                        <td>
                            {% if post.published %}
                                <a href="{{ path('app_admin_post_publish', { 'id': post.id, 'publish': 0, 'callback': app.request.uri }) }}"
                                   class="btn btn-success btn-xs" data-toggle="tooltip" data-placement="top"
                                   data-original-title="Retirer la publication">
                                    <span class="glyphicon glyphicon-ok"></span>
                                </a>
                            {% else %}
                                <a href="{{ path('app_admin_post_publish', { 'id': post.id, 'publish': 1, 'callback': app.request.uri }) }}"
                                   class="btn btn-warning btn-xs" data-toggle="tooltip" data-placement="top"
                                   data-original-title="Publier cet article">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_post_edit', { 'id': post.id, 'callback': app.request.uri }) }}"
                               class="btn btn-warning btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Modifier
                            </a>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                    data-target=".my-modal" data-item="{{ post.title }}"
                                    data-path="{{ path('app_admin_post_delete', { 'id': post.id, 'callback': app.request.uri }) }}">
                                <span class="glyphicon glyphicon-trash"></span>
                                Supprimer
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            {{ pagination(posts) }}
        </div>
    </section>
    {% include "admin/includes/_delete-post-modal.html.twig" %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/modal.js') }}"></script>
    <script>
        $('#reset').click(function () {
            $('form').find('input:text, input:password, select, textarea').val('');
            $('form').find('input:radio, input:checkbox').prop('checked', false);
        });
    </script>
{% endblock %}