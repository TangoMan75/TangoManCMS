{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Articles - Importer{% endblock %}

{% block admin %}
    <header>
        <h1>Articles</h1>
        <h2>Importer des articles</h2>
        {% if is_granted('ROLE_ADMIN') %}
            <p>Ici vous pouvez importer des articles dans <strong>{{ site_name }}</strong> au format JSON.</p>
        {% else %}
            <p>Vous devez poss√®der des droits administrateur pour effectuer cette action.</p>
        {% endif %}
    </header>

    {{ menu('{
        "items": [
            {
                "label": "Liste",
                "route": "app_admin_post_index",
                "active": "app_admin_post_index",
                "icon": "glyphicon glyphicon-list"
            },
            {
                "label": "Ajouter",
                "route": "app_admin_post_new",
                "active": "app_admin_post_new",
                "callback": true,
                "icon": "glyphicon glyphicon-plus"
            },
            {
                "label": "Importer",
                "route": "app_admin_post_import",
                "active": "app_admin_post_import",
                "icon": "glyphicon glyphicon-import"
            },
            {
                "label": "Exporter",
                "route": "app_admin_post_export",
                "active": "app_admin_post_export",
                "icon": "glyphicon glyphicon-export"
            }
        ]
    }', 'tabs') }}

    {% if is_granted('ROLE_ADMIN') %}
        <section id="import">
            <div class="col-xs-12 col-md-6">
                <div id="import" class="panel panel-warning">
                    <div class="panel-heading">
                        <h1 class="text-center">
                            Importer une liste d'articles
                        </h1>
                    </div>
                    <div class="panel-body text-center">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary center-block">
                            <span class="glyphicon glyphicon-import"></span>
                            Importer
                        </button>
                        {{ form_end(form) }}
                    </div>
                    <div class="panel-footer"></div>
                </div>
            </div>
        </section>
    {% endif %}
{% endblock %}