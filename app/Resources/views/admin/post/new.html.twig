{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Articles - Ajouter{% endblock %}

{% block head %}
    {{ parent() }}
    {% if app.user %}
        <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
        <script>tinymce.init({selector: 'textarea', height: '250'});</script>
    {% endif %}
{% endblock %}

{% block admin %}
    <header>
        <h1>Posts</h1>
        <h2>Ajouter des articles</h2>
        <p>Ici vous pouvez ajouter des articles Ã  <strong>{{ site_name }}</strong>.</p>
    </header>

    {{ menu('{
        "items": [
            {
                "label": "Liste",
                "route": "app_admin_post_index",
                "active": "app_admin_post_index",
                "icon": "glyphicon glyphicon-list"
            },
            {
                "label": "Ajouter",
                "route": "app_admin_post_new",
                "active": "app_admin_post_new",
                "callback": true,
                "icon": "glyphicon glyphicon-plus"
            },
            {
                "label": "Importer",
                "route": "app_admin_post_import",
                "active": "app_admin_post_import",
                "icon": "glyphicon glyphicon-import"
            },
            {
                "label": "Exporter",
                "route": "app_admin_post_export",
                "active": "app_admin_post_export",
                "icon": "glyphicon glyphicon-export"
            }
        ]
    }', 'tabs') }}

    <section id="new">
        <div class="jumbotron">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-floppy-disk"></span>
                    Enregister
                </button>
                <a href="{{ path('app_admin_post_index') }}" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
