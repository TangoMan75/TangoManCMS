{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Roles{% endblock %}

{% block admin %}
    <header>
        <h1>Roles</h1>
        <h2>Liste des roles</h2>
        <p>Ici vous pouvez accèder à la liste des roles de {{ site_name }}.</p>
    </header>
    {% include "admin/includes/_role_tabs.html.twig" %}
    <section id="search">
        <div class="jumbotron">
            <form method="GET" class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <label class="control-label col-sm-4" for="inputId">Id</label>
                        <div class="col-sm-8">
                            <input type="number" name="id" id="inputId" class="form-control"
                                   value="{{ app.request.get('id') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <label class="control-label col-sm-4" for="inputName">Nom</label>
                        <div class="col-sm-8">
                            <input type="text" name="name" id="inputName" class="form-control"
                                   value="{{ app.request.get('name') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <label class="control-label col-sm-4" for="inputType">Type</label>
                        <div class="col-sm-8">
                            <input type="text" name="type" id="inputType" class="form-control"
                                   value="{{ app.request.get('type') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3 text-right pull-right">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span> Filtrer ({{ roles.count }})
                        </button>
                        <button id="reset" class="btn btn-warning">
                            <span class="glyphicon glyphicon-remove"></span> Effacer
                        </button>
                    </div>

                    <input type="hidden" name="page" value="1"/>
                    <input type="hidden" name="order" value="{{ app.request.query.get('order', 'id') }}"/>
                    <input type="hidden" name="way" value="{{ app.request.query.get('way', 'ASC') }}"/>
                </div>
            </form>
        </div>
    </section>

    <section id="role-list">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="{{ app.request.query.get('order') == 'id' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_role_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'id',
                            'way'   : app.request.query.get('order') == 'id'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Id
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'name' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_role_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'name',
                            'way'   : app.request.query.get('order') == 'name'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Nom
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'type' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_role_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'type',
                            'way'   : app.request.query.get('order') == 'type'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Type
                        </a>
                    </th>

                    <th colspan="2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for role in roles %}
                    {% set role = role[0] %}
                    <tr>
                        <td>{{ role.id }}</td>
                        <td>{{ role.name }}</td>
                        <td>{{ role.type }}</td>
                        <td>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <a href="{{ path('app_admin_role_edit', { 'id': role.id, 'callback': app.request.uri|callback }) }}"
                                   class="btn btn-warning btn-sm">
                                    <span class="glyphicon glyphicon-edit"></span>
                                    Modifier
                                </a>
                            {% else %}
                                <span class="btn btn-warning btn-sm disabled" data-toggle="tooltip" data-placement="top"
                                      data-original-title="Lecture seule uniquement">
                                    <span class="glyphicon glyphicon-edit"></span>
                                    Modifier
                                </span>
                            {% endif %}
                        </td>
                        <td>
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                        data-target=".my-modal" data-item="{{ role.name }}"
                                        data-path="{{ path('app_admin_role_delete', { 'id': role.id, 'callback': app.request.uri|remove_query }) }}">
                                    <span class="glyphicon glyphicon-trash"></span>
                                    Supprimer
                                </button>
                            {% else %}
                                <span class="btn btn-danger btn-sm disabled" data-toggle="tooltip" data-placement="top"
                                      data-original-title="Lecture seule uniquement">
                                    <span class="glyphicon glyphicon-trash"></span>
                                    Supprimer
                                </span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            {{ pagination(roles) }}
        </div>
    </section>
    {% include "admin/includes/_delete-role-modal.html.twig" %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/modal.js') }}"></script>
    <script>
        $('#reset').click(function () {
            $('form').find('input:text, input:password, select, textarea').val('');
            $('form').find('input:radio, input:checkbox').prop('checked', false);
        });
    </script>
{% endblock %}