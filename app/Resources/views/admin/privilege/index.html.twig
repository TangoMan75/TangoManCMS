{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Privilèges{% endblock %}

{% block admin %}
    <header>
        <h1>Privilèges</h1>
        <h2>Liste des privilèges</h2>
        <p>Ici vous pouvez accèder à la liste des privilèges de <strong>{{ site_name }}</strong>.</p>
    </header>
    {% include "admin/includes/_privilege_tabs.html.twig" %}
    <section id="search">
        <div class="jumbotron">
            <form method="GET" class="form-horizontal">
                <div class="form-group">

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <label class="control-label col-sm-4" for="inputName">Nom</label>
                        <div class="col-sm-8">
                            <input type="text" name="name" id="inputName" class="form-control"
                                   value="{{ app.request.get('name')|join(', ') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <label class="control-label col-sm-4" for="inputType">Type</label>
                        <div class="col-sm-8">
                            <input type="text" name="type" id="inputType" class="form-control"
                                   value="{{ app.request.get('type')|join(', ') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="selectRole">Role</label>
                        <div class="col-sm-8">
                            <select name="roles-type" id="selectRole" class="form-control">
                                <option value="">Tous</option>
                                <option value="ROLE_SUPER_ADMIN"
                                        {% if app.request.get('roles-type') == "ROLE_SUPER_ADMIN" %}selected{% endif %}>
                                    ROLE_SUPER_ADMIN
                                </option>
                                <option value="ROLE_ADMIN"
                                        {% if app.request.get('roles-type') == "ROLE_ADMIN" %}selected{% endif %}>
                                    ROLE_ADMIN
                                </option>
                                <option value="ROLE_SUPER_USER"
                                        {% if app.request.get('roles-type') == "ROLE_SUPER_USER" %}selected{% endif %}>
                                    ROLE_SUPER_USER
                                </option>
                                <option value="ROLE_USER"
                                        {% if app.request.get('roles-type') == "ROLE_USER" %}selected{% endif %}>
                                    ROLE_USER
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputUser">Utilisateur</label>
                        <div class="col-sm-8">
                            <input type="text" name="users-username" id="inputUser" class="form-control"
                                   value="{{ app.request.get('users-username')|join(', ') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3 text-right pull-right">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span> Filtrer ({{ privileges.count }})
                        </button>
                        <button id="reset" class="btn btn-warning">
                            <span class="glyphicon glyphicon-remove"></span> Effacer
                        </button>
                    </div>

                    <input type="hidden" name="page" value="1"/>
                    <input type="hidden" name="order" value="{{ app.request.query.get('order', 'id') }}"/>
                    <input type="hidden" name="way" value="{{ app.request.query.get('way', 'ASC') }}"/>
                </div>
            </form>
        </div>
    </section>

    <section id="privilege-list">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="{{ app.request.query.get('order') == 'name' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_privilege_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'name',
                            'way'   : app.request.query.get('order') == 'name'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Nom
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'type' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_privilege_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'type',
                            'way'   : app.request.query.get('order') == 'type'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Type
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'c-users' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_privilege_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'c-users',
                            'way'   : app.request.query.get('order') == 'c-users'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Utilisateurs
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'c-roles' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_privilege_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'c-roles',
                            'way'   : app.request.query.get('order') == 'c-roles'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Roles
                        </a>
                    </th>

                    <th colspan="2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for privilege in privileges %}

                    <tr>
                        <td>
                            <div class="btn btn-{{ privilege.label }} btn-sm">
                                {{ privilege.name }}
                            </div>
                        </td>

                        <td>
                            {{ privilege.type }}
                        </td>

                        <td>
                            {% if privilege.users|length > 1 %}
                                <a href="{{ path('app_admin_user_index', { 'privilege': privilege.name }) }}"
                                   class="label label-success"
                                   data-toggle="tooltip" data-placement="top"
                                   data-original-title="Lister les {{ privilege.users|length }} utilisateurs possédant le privilège &quot;{{ privilege.name }}&quot;"
                                >
                                    Utilisateurs
                                    <span class="badge-sm pull-right">{{ privilege.users|length }}</span>
                                </a><br/>
                            {% endif %}

                            {% for user in privilege.users %}
                                {% if loop.index < 6 %}
                                    <a href="{{ path('app_admin_user_index', { 'user': user.username }) }}"
                                       class="label label-primary"
                                       data-toggle="tooltip" data-placement="top"
                                       data-original-title="Voir le détail de l'utilisateur &quot;{{ user }}&quot;"
                                    >
                                        {{ user }}
                                    </a><br/>
                                {% elseif loop.last %}
                                    <span class="label label-primary">...</span>
                                {% endif %}
                            {% else %}
                                <span class="label label-danger"
                                      data-toggle="tooltip" data-placement="top"
                                      data-original-title="Le privilège &quot;{{ privilege.name }}&quot; n'a été attribué à aucun utilisateur"
                                >
                                    <span class="glyphicon glyphicon-user"></span>
                                    Aucun utilisateur
                                </span>
                            {% endfor %}
                        </td>

                        <td>
                            {% if privilege.roles|length > 1 %}
                                <a href="{{ path('app_admin_role_index', { 'privilege': privilege.name }) }}"
                                   class="label label-success label-block"
                                   data-toggle="tooltip" data-placement="top"
                                   data-original-title="Lister les {{ privilege.roles|length }} roles possédant le privilège &quot;{{ privilege.name }}&quot;"
                                >
                                    <span class="glyphicon glyphicon-king"></span>
                                    Roles
                                    <span class="badge-sm pull-right">{{ privilege.roles|length }}</span>
                                </a>
                            {% endif %}

                            {% for role in privilege.roles %}
                                {% if loop.index < 6 %}
                                    <a href="{{ path('app_admin_role_index', { 'role': role.name }) }}"
                                       class="label label-{{ role.label }}"
                                       data-toggle="tooltip" data-placement="top"
                                       data-original-title="Voir le détail du role &quot;{{ role }}&quot;"
                                    >
                                        <span class="{{ role.icon }}"></span>
                                        {{ role }}
                                    </a><br/>
                                {% elseif loop.last %}
                                    <span class="label label-primary">...</span>
                                {% endif %}
                            {% else %}
                                <span class="label label-danger"
                                      data-toggle="tooltip" data-placement="top"
                                      data-original-title="Le privilège &quot;{{ privilege.name }}&quot; n'a été attribué à aucun role"
                                >Aucun role</span>
                            {% endfor %}
                        </td>

                        <td>
                            <a href="{{ path('app_admin_privilege_edit', { 'id': privilege.id, 'callback': app.request.uri|callback }) }}"
                               class="btn btn-warning btn-sm"
                               data-toggle="tooltip" data-placement="top"
                               data-original-title="Modifier le privilege &quot;{{ privilege.name }}&quot;"
                            >
                                <span class="glyphicon glyphicon-edit"></span>
                                <span class="hidden-xs">Modifier</span>
                            </a>
                        </td>

                        <td data-toggle="tooltip" data-placement="top"
                            data-original-title="Supprimer le privilege &quot;{{ privilege.name }}&quot;"
                        >
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                    data-target=".my-modal" data-item="{{ privilege.name }}"
                                    data-path="{{ path('app_admin_privilege_delete', { 'id': privilege.id, 'callback': app.request.uri|remove_query }) }}">
                                <span class="glyphicon glyphicon-trash"></span>
                                <span class="hidden-xs">Supprimer</span>
                            </button>
                        </td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            {{ pagination(privileges) }}
        </div>
    </section>
    {% include "admin/includes/_delete-privilege-modal.html.twig" %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/modal.js') }}"></script>
    <script>
        $('#reset').click(function () {
            $('form').find('input:text, input:password, select, textarea').val('');
            $('form').find('input:radio, input:checkbox').prop('checked', false);
        });
    </script>
{% endblock %}