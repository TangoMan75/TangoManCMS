{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Étiquettes{% endblock %}

{% block admin %}
    <header>
        <h1>Étiquettes</h1>
        <h2>Liste des étiquettes</h2>
        <p>Ici vous pouvez accèder à la liste des étiquettes de {{ site_name }}.</p>
    </header>
    {% include "admin/includes/_tag_tabs.html.twig" %}
    <section id="search">
        <div class="jumbotron">
            <form method="GET" class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <label class="control-label col-sm-4" for="inputId">Id</label>
                        <div class="col-sm-8">
                            <input type="text" name="s_id" id="inputId" class="form-control"
                                   value="{{ app.request.get('s_id') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <label class="control-label col-sm-4" for="inputName">Nom</label>
                        <div class="col-sm-8">
                            <input type="text" name="s_name" id="inputName" class="form-control"
                                   value="{{ app.request.get('s_name') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <label class="control-label col-sm-4" for="selectRole">Type</label>
                        <div class="col-sm-8">
                            <select name="s_type" id="selectRole" class="form-control">
                                <option value="">Tous</option>
                                <option value="default"
                                        {% if app.request.get('s_type') == "default" %}selected{% endif %}>
                                    default
                                </option>
                                <option value="primary"
                                        {% if app.request.get('s_type') == "primary" %}selected{% endif %}>
                                    primary
                                </option>
                                <option value="info"
                                        {% if app.request.get('s_type') == "info" %}selected{% endif %}>
                                    info
                                </option>
                                <option value="success"
                                        {% if app.request.get('s_type') == "success" %}selected{% endif %}>
                                    success
                                </option>
                                <option value="warning"
                                        {% if app.request.get('s_type') == "warning" %}selected{% endif %}>
                                    warning
                                </option>
                                <option value="danger"
                                        {% if app.request.get('s_type') == "danger" %}selected{% endif %}>
                                    danger
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-3 text-right pull-right">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span> Filtrer ({{ tags.count }})
                        </button>
                        <button id="reset" class="btn btn-warning">
                            <span class="glyphicon glyphicon-remove"></span> Effacer
                        </button>
                    </div>

                    <input type="hidden" name="page" value="1"/>
                    <input type="hidden" name="order" value="{{ app.request.query.get('order', 'id') }}"/>
                    <input type="hidden" name="way" value="{{ app.request.query.get('way', 'ASC') }}"/>
                </div>
            </form>
        </div>
    </section>

    <section id="tag-list">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="{{ app.request.query.get('order') == 'id' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_tag_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'id',
                            'way'   : app.request.query.get('order') == 'id'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Id
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'name' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_tag_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'name',
                            'way'   : app.request.query.get('order') == 'name'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Nom
                        </a>
                    </th>
                    <th class="{{ app.request.query.get('order') == 'type' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_tag_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'type',
                            'way'   : app.request.query.get('order') == 'type'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Type
                        </a>
                    </th>
                    <th colspan="2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for tag in tags %}
                    {% set tag = tag[0] %}
                    <tr>
                        <td>
                            {{ tag.id }}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_tag_edit', { 'id': tag.id, 'callback': app.request.uri }) }}">
                                {{ tag.name }}
                            </a>
                        </td>
                        <td>
                            {{ tag.type }}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_tag_edit', { 'id': tag.id, 'callback': app.request.uri }) }}"
                               class="btn btn-warning btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Modifier
                            </a>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                    data-target=".my-modal" data-item="{{ tag.name }}"
                                    data-path="{{ path('app_admin_tag_delete', { 'id': tag.id, 'callback': app.request.uri }) }}">
                                <span class="glyphicon glyphicon-trash"></span>
                                Supprimer
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            {{ pagination(tags) }}
        </div>
    </section>
    {% include "admin/includes/_delete-tag-modal.html.twig" %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/modal.js') }}"></script>
    <script>
        $('#reset').click(function () {
            $('form').find('input:text, input:password, select, textarea').val('');
            $('form').find('input:radio, input:checkbox').prop('checked', false);
        });
    </script>
{% endblock %}