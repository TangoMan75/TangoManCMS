{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Sections{% endblock %}

{% block admin %}
    <header>
        <h1>Sections</h1>
        <h2>Liste des sections</h2>
        <p>Ici vous pouvez accèder à la liste des sections de <strong>{{ site_name }}</strong>.</p>
    </header>
    {% include "admin/includes/_section_tabs.html.twig" %}
    <section id="search">
        <div class="jumbotron">
            <form method="GET" class="form-horizontal">
                <div class="form-group">
                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputId">Id</label>
                        <div class="col-sm-8">
                            <input type="number" name="id" id="inputId" class="form-control"
                                   value="{{ app.request.get('id') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputSlug">Slug</label>
                        <div class="col-sm-8">
                            <input type="text" name="title" id="inputSlug" class="form-control"
                                   value="{{ app.request.get('slug') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputTitle">Titre</label>
                        <div class="col-sm-8">
                            <input type="text" name="title" id="inputTitle" class="form-control"
                                   value="{{ app.request.get('title') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="inputTag">Étiquette</label>
                        <div class="col-sm-8">
                            <input type="text" name="tag" id="inputTag" class="form-control"
                                   value="{{ app.request.get('tag') }}"/>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        <label class="control-label col-sm-4" for="selectStatus">Publication</label>
                        <div class="col-sm-8">
                            <select name="published" id="selectStatus" class="form-control">
                                <option value="">Tous</option>
                                <option value="true"
                                        {% if app.request.get('published') == "true" %}selected{% endif %}>
                                    Publié
                                </option>
                                <option value="false"
                                        {% if app.request.get('published') == "false" %}selected{% endif %}>
                                    Non-publié
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 text-right pull-right">
                        <button type="submit" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span> Filtrer ({{ sections.count }})
                        </button>
                        <button id="reset" class="btn btn-warning">
                            <span class="glyphicon glyphicon-remove"></span> Effacer
                        </button>
                    </div>

                    <input type="hidden" name="section" value="1"/>
                    <input type="hidden" name="order" value="{{ app.request.query.get('order', 'title') }}"/>
                    <input type="hidden" name="way" value="{{ app.request.query.get('way', 'ASC') }}"/>
                </div>

            </form>
        </div>
    </section>

    <section id="section-list">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th class="{{ app.request.query.get('order') == 'id' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'section'  : 1,
                            'order' : 'id',
                            'way'   : app.request.query.get('order') == 'id'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Id
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'slug' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'section'  : 1,
                            'order' : 'slug',
                            'way'   : app.request.query.get('order') == 'slug'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
                            Slug
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'title' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'section'  : 1,
                            'order' : 'title',
                            'way'   : app.request.query.get('order') == 'title'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Titre
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'pages' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'section'  : 1,
                            'order' : 'pages',
                            'way'   : app.request.query.get('order') == 'pages'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Pages
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'posts' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'section'  : 1,
                            'order' : 'posts',
                            'way'   : app.request.query.get('order') == 'posts'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Posts
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'tags' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'section'  : 1,
                            'order' : 'tags',
                            'way'   : app.request.query.get('order') == 'tags'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Étiquettes
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'published' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'section'  : 1,
                            'order' : 'published',
                            'way'   : app.request.query.get('order') == 'published'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Publication
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'created' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'section'  : 1,
                            'order' : 'created',
                            'way'   : app.request.query.get('order') == 'created'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Création
                        </a>
                    </th>

                    <th class="{{ app.request.query.get('order') == 'modified' ? app.request.query.get('way', 'ASC') }}">
                        <a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'section'  : 1,
                            'order' : 'modified',
                            'way'   : app.request.query.get('order') == 'modified'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
                            Modification
                        </a>
                    </th>

                    <th colspan="2">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for section in sections %}
                    {% set section = section[0] %}
                    <tr>
                        <td>
                            {{ section.id }}
                        </td>
                        <td>{{ section.slug }}</td>
                        <td>
                            {{ section.title }}
                        </td>
                        <td>
                            {#<span class="label label-success">#}
                                {#{{ section.pages|length }}#}
                            {#</span>#}
                            {% for page in section.pages %}
                                <span class="label label-default">
                                    {{ page.title }}<br />
                                </span>
                            {% endfor %}
                        </td>
                        <td>
                            <span class="label label-success">
                                {{ section.posts|length }}
                            </span>
                        </td>
                        <td>
                            {% for tag in section.tags %}
                                <a href="{{ path('app_admin_section_index', app.request.query.all|merge({'tag' : tag.name})) }}"
                                   class="label label-{{ tag.type }}">
                                    {{ tag.name }}
                                </a><br/>
                            {% endfor %}
                        </td>
                        <td>
                            {% if section.published %}
                                <a href="{{ path('app_admin_section_index', app.request.query.all|merge({'published' : 'true'})) }}"
                                   class="btn btn-success btn-xs">
                                    <span class="glyphicon glyphicon-ok"></span>
                                </a>
                            {% else %}
                                <a href="{{ path('app_admin_section_index', app.request.query.all|merge({'published' : 'false'})) }}"
                                   class="btn btn-warning btn-xs">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>
                            {% endif %}
                        </td>
                        <td>{{ section.created|date('d/m/Y H:i:s') }}</td>
                        <td>{{ section.modified|date('d/m/Y H:i:s') }}</td>
                        <td>
                            <a href="{{ path('app_admin_section_edit', { 'id': section.id, 'callback': app.request.uri|callback }) }}"
                               class="btn btn-warning btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                                Modifier
                            </a>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
                                    data-target=".my-modal" data-item="{{ section.title }}"
                                    data-path="{{ path('app_admin_section_delete', { 'id': section.id, 'callback': app.request.uri|remove_query }) }}">
                                <span class="glyphicon glyphicon-trash"></span>
                                Supprimer
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="text-center">
            {{ pagination(sections) }}
        </div>
    </section>
    {% include "admin/includes/_delete-section-modal.html.twig" %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/modal.js') }}"></script>
    <script>
        $('#reset').click(function () {
            $('form').find('input:text, input:password, select, textarea').val('');
            $('form').find('input:radio, input:checkbox').prop('checked', false);
        });
    </script>
{% endblock %}