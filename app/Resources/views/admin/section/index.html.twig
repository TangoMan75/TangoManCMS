{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Sections{% endblock %}

{% block admin %}
	<header>
		<h1>Sections</h1>
		<h2>Liste des sections</h2>
		<p>Ici vous pouvez accèder à la liste des sections de {{ site_name }}.</p>
	</header>
	{% include "admin/includes/_section_tabs.html.twig" %}
	<section id="search">
		<div class="jumbotron">
			<form method="GET" class="form-horizontal">
				<div class="row">
					<div class="form-group">
						<div class="col-xs-12 col-sm-6 col-md-4">
							<label class="control-label col-sm-4" for="inputId">Id</label>
							<div class="col-sm-8">
								<input type="text" name="s_id" id="inputId" class="form-control"
									   value="{{ app.request.get('s_id') }}"/>
							</div>
						</div>

						<div class="col-xs-12 col-sm-6 col-md-4">
							<label class="control-label col-sm-4" for="inputTitle">Titre</label>
							<div class="col-sm-8">
								<input type="text" name="s_title" id="inputTitle" class="form-control"
									   value="{{ app.request.get('s_title') }}"/>
							</div>
						</div>

						<div class="col-xs-12 col-sm-6 col-md-4">
							<label class="control-label col-sm-4" for="inputTag">Étiquette</label>
							<div class="col-sm-8">
								<input type="text" name="s_tag" id="inputTag" class="form-control"
									   value="{{ app.request.get('s_tag') }}"/>
							</div>
						</div>

						<div class="col-xs-12 col-sm-6 col-md-4">
							<label class="control-label col-sm-4" for="inputPublished">Publié</label>
							<div class="col-sm-8">
								<input type="checkbox" name="s_published" id="inputPublished" class="form-control"
									   value="1"{% if app.request.query.get('s_published') %} checked{% endif %}/>
							</div>
						</div>

					</div>
					<input type="hidden" name="page" value="1"/>
					<input type="hidden" name="order" value="{{ app.request.query.get('order', 'title') }}"/>
					<input type="hidden" name="way" value="{{ app.request.query.get('way', 'ASC') }}"/>
					<div class="col-xs-12">
						<div class="pull-right">
							<button type="submit" class="btn btn-primary">
								<span class="glyphicon glyphicon-search"></span> Filtrer ({{ sections.count }})
							</button>
							<button id="reset" class="btn btn-warning">
								<span class="glyphicon glyphicon-remove"></span> Effacer
							</button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</section>

	<section id="section-list">
		<div class="table-responsive">
			<table class="table table-striped">
				<thead>
				<tr>
					<th class="{{ app.request.query.get('order') == 'id' ? app.request.query.get('way', 'ASC') }}">
						<a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'id',
                            'way'   : app.request.query.get('order') == 'id'
                            and app.request.query.get('way', 'ASC') == 'ASC' ? 'DESC' : 'ASC'})) }}">
							Id
						</a>
					</th>
					<th class="{{ app.request.query.get('order') == 'title' ? app.request.query.get('way', 'ASC') }}">
						<a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'title',
                            'way'   : app.request.query.get('order') == 'title'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
							Titre
						</a>
					</th>
					<th class="{{ app.request.query.get('order') == 'pages' ? app.request.query.get('way', 'ASC') }}">
						<a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'pages',
                            'way'   : app.request.query.get('order') == 'pages'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
							Pages
						</a>
					</th>
					<th class="{{ app.request.query.get('order') == 'published' ? app.request.query.get('way', 'ASC') }}">
						<a href="{{ path('app_admin_section_index', app.request.query.all|merge({
                            'page'  : 1,
                            'order' : 'published',
                            'way'   : app.request.query.get('order') == 'published'
                            and app.request.query.get('way', 'DESC') == 'DESC' ? 'ASC' : 'DESC'})) }}">
							Publié
						</a>
					</th>
					<th>Étiquette</th>
					<th colspan="2">Actions</th>
				</tr>
				</thead>
				<tbody>
                {% for section in sections %}
                    {% set section = section[0] %}
					<tr>
						<td>
							{#<a href="{{ path('app_section_edit', { 'id': section.id }) }}">#}
                                {{ section.id }}
							{#</a>#}
						</td>
						<td>
							{#<a href="{{ path('app_section_edit', { 'id': section.id }) }}">#}
                                {{ section.title }}
							{#</a>#}
						</td>
						<td>
                            <span class="label label-success">
                                {{ section.pages|length }}
                            </span>
						</td>
						<td>
                            {% if section.published %}
								<span class="btn btn-success btn-xs">
                                    <span class="glyphicon glyphicon-ok"></span>
                                </span>
                            {% else %}
								<span class="btn btn-warning btn-xs">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </span>
                            {% endif %}
						</td>
						<td>
                            {% for tag in section.tags %}
								<a href="{{ path('app_admin_section_index', app.request.query.all|merge({'s_tag' : tag.name})) }}"
								   class="label label-{{ tag.type }}">
                                    {{ tag.name }}
								</a><br/>
                            {% endfor %}
						</td>
						<td>
							<a href="{{ path('app_admin_section_edit', { 'id': section.id, 'callback': app.request.uri }) }}"
							   class="btn btn-warning btn-sm">
								<span class="glyphicon glyphicon-edit"></span>
								Modifier
							</a>
						</td>
						<td>
							<button type="button" class="btn btn-danger btn-sm" data-toggle="modal"
									data-target=".my-modal" data-item="{{ section.title }}"
									data-path="{{ path('app_admin_section_delete', { 'id': section.id, 'callback': app.request.uri }) }}">
								<span class="glyphicon glyphicon-trash"></span>
								Supprimer
							</button>
						</td>
					</tr>
                {% endfor %}
				</tbody>
			</table>
		</div>
		<div class="text-center">
            {{ pagination(sections) }}
		</div>
	</section>
    {% include "admin/includes/_delete-section-modal.html.twig" %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
	<script src="{{ asset('js/modal.js') }}"></script>
	<script>
        $('#reset').click(function () {
            $('form').find('input:text, input:password, select, textarea').val('');
            $('form').find('input:radio, input:checkbox').prop('checked', false);
        });
	</script>
{% endblock %}