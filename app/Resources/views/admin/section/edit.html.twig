{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Sections - Modifier {{ section }}{% endblock %}

{% block head %}
    {{ parent() }}
    {% if app.user %}
        <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
        <script>tinymce.init({selector: 'textarea', height: '250'});</script>
    {% endif %}
{% endblock %}

{% block admin %}
    <header>
        <h1>Sections</h1>
        <h2>Modifier la section &quot;{{ section }}&quot;</h2>
        <p>Ici vous pouvez modifier la section &quot;{{ section }}&quot; de {{ site_name }}</p>
    </header>

    {{ menu('{
        "items": [
            {
                "label": "Liste",
                "route": "app_admin_section_index",
                "active": "app_admin_section_index",
                "icon": "glyphicon glyphicon-list"
            },
            {
                "label": "Ajouter",
                "route": "app_admin_section_new",
                "active": "app_admin_section_new",
                "callback": true,
                "icon": "glyphicon glyphicon-plus"
            }
        ]
    }', 'tabs') }}

    <section id="edit">
        <div class="jumbotron">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="text-center">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-thumbs-up"></span>
                    Valider
                </button>
                <a href="{{ path('app_admin_section_index') }}" class="btn btn-warning">
                    <span class="glyphicon glyphicon-thumbs-down"></span>
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
