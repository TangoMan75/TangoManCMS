<div id="tabs">
    <ul class="nav nav-tabs">
        <li{% if app.request.attributes.get('_route') ends with 'index' %} class="active"{% endif %}>
            <a href="{{ path('app_admin_section_index') }}">
                <i class="glyphicon glyphicon-list"></i>
                Liste
            </a>
        </li>
        <li{% if app.request.attributes.get('_route') ends with 'new' %} class="active"{% endif %}>
            <a href="{{ path('app_admin_section_new', { 'callback': app.request.uri }) }}">
                <i class="glyphicon glyphicon-plus"></i>
                Ajouter
            </a>
        </li>
        <li{% if app.request.attributes.get('_route') ends with 'export' %} class="active"{% endif %}>
            {# <a href="{{ path('app_admin_section_export') }}"#}
            <a href="#">
                <i class="glyphicon glyphicon-import"></i>
                Importer
            </a>
        </li>
        <li{% if app.request.attributes.get('_route') ends with 'import' %} class="active"{% endif %}>
            {# <a href="{{ path('app_admin_section_export') }}"#}
            <a href="#">
                <i class="glyphicon glyphicon-export"></i>
                Exporter
            </a>
        </li>
        {% if section is defined %}
            <li{% if app.request.attributes.get('_route') ends with 'edit' %} class="active"{% endif %}>
                <a href="{{ path('app_admin_section_edit', { 'id': section.id, 'callback': app.request.uri }) }}">
                    <i class="glyphicon glyphicon-edit"></i>
                    {{ section.title|truncate(20) }}
                </a>
            </li>
        {% endif %}
    </ul>
</div>