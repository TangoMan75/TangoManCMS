<div id="tabs">
    <ul class="nav nav-tabs">
        <li{% if app.request.attributes.get('_route') ends with 'index' %} class="active"{% endif %}>
            <a href="{{ path('app_admin_post_index') }}">
                <span class="glyphicon glyphicon-list"></span>
                Liste
            </a>
        </li>
        <li{% if app.request.attributes.get('_route') ends with 'new' %} class="active"{% endif %}>
            <a href="{{ path('app_admin_post_new', { 'callback': app.request.uri|callback }) }}">
                <span class="glyphicon glyphicon-plus"></span>
                Ajouter
            </a>
        </li>
        <li{% if app.request.attributes.get('_route') ends with 'import' %} class="active"{% endif %}>
            <a href="{{ path('app_admin_post_import') }}">
                <span class="glyphicon glyphicon-import"></span>
                Importer
            </a>
        </li>
        <li{% if app.request.attributes.get('_route') ends with 'export' %} class="active"{% endif %}>
            <a href="{{ path('app_admin_post_exportjson', app.request.query.all ) }}"
               data-toggle="tooltip" data-placement="top"
               data-original-title="Exporter les {{ posts.count }} articles sélectionnés."
            >
                <span class="glyphicon glyphicon-export"></span>
                Exporter
            </a>
        </li>
        {% if post is defined %}
            <li{% if app.request.attributes.get('_route') ends with 'edit' %} class="active"{% endif %}>
                <a href="{{ path('app_admin_post_edit', { 'id': post.id, 'callback': app.request.uri|callback }) }}">
                    <span class="glyphicon glyphicon-edit"></span>
                    {{ post|truncate(20) }}
                </a>
            </li>
        {% endif %}
    </ul>
</div>
