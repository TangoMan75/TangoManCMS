<div id="tabs">
    <ul class="nav nav-tabs">
        <li{% if app.request.attributes.get('_route') ends with 'index' %} class="active"{% endif %}>
            <a href="{{ path('app_admin_gallery_index') }}">
                <span class="glyphicon glyphicon-list"></span>
                Liste
            </a>
        </li>
        <li{% if app.request.attributes.get('_route') ends with 'new' %} class="active"{% endif %}>
            <a href="{{ path('app_admin_gallery_new', { 'callback': callback() }) }}">
                <span class="glyphicon glyphicon-plus"></span>
                Ajouter
            </a>
        </li>
        {% if gallery is defined %}
            <li{% if app.request.attributes.get('_route') ends with 'edit' %} class="active"{% endif %}>
                <a href="{{ path('app_admin_gallery_edit', { 'id': gallery.id, 'callback': callback() }) }}">
                    <span class="glyphicon glyphicon-edit"></span>
                    {{ gallery|truncate(20) }}
                </a>
            </li>
        {% endif %}
    </ul>
</div>