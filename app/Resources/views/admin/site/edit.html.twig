{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Sites - Modifier {{ site }}{% endblock %}

{% block head %}
    {{ parent() }}
    {% if app.user %}
        <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
        <script>tinymce.init({selector: 'textarea', height: '250'});</script>
    {% endif %}
{% endblock %}

{% block admin %}
    <header>
        <h1>Sites</h1>
        <h2>Modifier la site &quot;{{ site }}&quot;</h2>
        <p>Ici vous pouvez modifier la site &quot;{{ site }}&quot; de {{ site_name }}</p>
    </header>
    {% include "admin/includes/_site_tabs.html.twig" %}
    <site id="edit">
        <div class="jumbotron">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="text-center">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-thumbs-up"></span>
                    Valider
                </button>
                <a href="{{ path('app_admin_site_index') }}" class="btn btn-warning">
                    <span class="glyphicon glyphicon-thumbs-down"></span>
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </site>
{% endblock %}
