{% extends 'admin/admin-base.html.twig' %}

{% block title %}{{ parent() }} | Sites - Ajouter{% endblock %}

{% block head %}
    {{ parent() }}
    {% if app.user %}
        <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
        <script>tinymce.init({selector: 'textarea', height: '250'});</script>
    {% endif %}
{% endblock %}

{% block admin %}
    <header>
        <h1>Sites</h1>
        <h2>Ajouter des Sites</h2>
        <p>Ici vous pouvez ajouter des Sites Ã  {{ site_name }}.</p>
    </header>
    {% include "admin/includes/_site_tabs.html.twig" %}
    <site id="new">
        <div class="jumbotron">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="text-center">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-floppy-disk"></span>
                    Enregister
                </button>
                <a href="{{ path('app_admin_site_index') }}" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>
                    Annuler
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </site>
{% endblock %}
